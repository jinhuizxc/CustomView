<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="text" format="string" />
    <attr name="textColor" format="color" />
    <attr name="textSize" format="dimension" />
    <attr name="bgColor" format="color" />

    <declare-styleable name="CustomView">
        <attr name="text" />
        <attr name="textColor" />
        <attr name="textSize" />
        <attr name="bgColor" />
    </declare-styleable>

    <declare-styleable name="CloudMusicLoadingView">
        <!-- 音轨数量 -->
        <attr name="cmlv_rail_count" format="integer" />
        <!-- 音轨的颜色 -->
        <attr name="cmlv_rail_color" format="color" />
        <!-- 音轨线宽粗细 -->
        <attr name="cmlv_line_width" format="integer|float|dimension" />
    </declare-styleable>

    <declare-styleable name="MenuItemLayout">
        <!--标题文本-->
        <attr name="title_text" format="string"/>
       <!-- 提示文本-->
        <attr name="hint_text" format="string"/>
        <!--引用的图片-->
        <attr name="icon_reference" format="reference"/>
        <!--图片uri-->
        <attr name="icon_uri" format="string"/>
        <!--跳转url-->
        <attr name="jump_url" format="string"/>
        <!--分割线样式-->
        <attr name="divide_line_style" format="integer"/>
    </declare-styleable>

    <!--ShapeButton-->
    <declare-styleable name="ShapeTextView">
        <!--Button圆角-->
        <attr name="shapeRadius" format="dimension"/>
        <!--边框宽度-->
        <attr name="shapeStrokeWidth" format="dimension"/>
        <!--边框颜色-->
        <attr name="shapeStrokeColor" format="color"/>
        <!--背景颜色-->
        <attr name="shapeBackgroundColor" format="color"/>
        <!--背景按下的颜色-->
        <attr name="shapeBackgroundSelectorColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="EmailConflictView">
        <attr name="panelView1" format="reference"/>
        <attr name="link" format="reference"/>
    </declare-styleable>

    <declare-styleable name="InputConflictView">
        <attr name="editText" format="reference"/>
        <attr name="listView" format="reference"/>
        <attr name="panelView" format="reference"/>
        <attr name="switchBtn" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CustomTitleBar">
        <attr name="left_button_visible" format="boolean" />
        <attr name="left_button_text" format="string" />
        <attr name="left_button_text_color" format="color" />
        <attr name="left_button_drawable" format="reference|integer" />
        <attr name="right_button_visible" format="boolean" />
        <attr name="right_button_text_color" format="color" />
        <attr name="right_button_text" format="string" />
        <attr name="right_button_drawable" format="reference|integer" />
        <attr name="title_text1" format="string" />
        <attr name="title_text_color" format="color" />
        <attr name="title_text_drawable" format="reference|integer" />
        <attr name="title_background_color" format="reference|integer" />
    </declare-styleable>

    <declare-styleable name="TopBar">
        <!--中间title的自定义属性-->
        <attr name="mCenterTitle" format="string"/>
        <attr name="mCenterTitleSize" format="dimension"/>
        <attr name="mCenterTitleColor" format="color"/>

        <!--左边图片的自定义属性-->
        <attr name="mLeftBackground" format="reference"/>

        <!--右边TextView的自定义属性-->
        <attr name="mRightTitle" format="string"/>
        <attr name="mRightTitleSize" format="dimension"/>
        <attr name="mRightTitleColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="XiaoMiStep">
        <!--背景-->
        <attr name="backGroundColor" format="color"/>
        <!--最外层圆-->
        <attr name="out_circle_color" format="color"/>
        <!--外层圆上的小圆点颜色-->
        <attr name="out_dot_color" format="color"/>
        <!--竖线的颜色-->
        <attr name="lineColor" format="color"/>
        <!--圆环的颜色-->
        <attr name="ringColor" format="color"/>
        <!--步数颜色-->
        <attr name="stepNumColor" format="color"/>
        <!--其他字的颜色-->
        <attr name="otherTextColor" format="color"/>
    </declare-styleable>

</resources>