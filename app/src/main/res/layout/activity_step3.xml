<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="视图篇" />

    <Button
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测量与布局"/>
    <Button
        android:id="@+id/bt_flowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FlowLayout自适应容器实现" />

    <Button
        android:id="@+id/bt_waterFallLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="瀑布流容器WaterFallLayout实现" />



    <Button
        android:id="@+id/btn_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RecyclerView系列之一简单使用"/>

    <Button
        android:id="@+id/btn_itemDecoration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RecyclerView系列之二ItemDecoration"/>

    <Button
        android:id="@+id/btn_layoutManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RecyclerView系列之三自定义LayoutManager"/>

    <Button
        android:id="@+id/btn_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RecyclerView系列之四实现回收复用"/>






</LinearLayout>